@model demo.Models.User

<h2>Add User</h2>

<form asp-action="Create" method="post">
    <div>
        <label>Name</label>
        <input asp-for="Name" required />
    </div>
    <div>
        <label>Email</label>
        <input asp-for="Email" type="email" required />
    </div>
    <button type="submit">Submit</button>
</form>

<a asp-action="Index">View All Users</a>
