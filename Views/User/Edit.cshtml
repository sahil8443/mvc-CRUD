@model demo.Models.User

<h2>Edit User</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div>
        <label>Name</label>
        <input asp-for="Name" required />
    </div>
    <div>
        <label>Email</label>
        <input asp-for="Email" type="email" required />
    </div>
    <button type="submit">Save Changes</button>
</form>

